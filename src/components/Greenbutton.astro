---
const button_text = Astro.props.button_text;
---

<div class="button">
  <a href="#" class="green_button">{button_text}</a>
</div>

<style>
  .green_button {
    padding: 10px 20px;
    background: linear-gradient(228deg, rgb(0, 179, 89), #0c78e8);
    color: white;
    text-decoration: none;
    margin-top: 20px;
    font-family: "Roboto";
    font-weight: 500;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-size: 20px;
    padding-right: 50px;
    padding-left: 50px;
  }
</style>
