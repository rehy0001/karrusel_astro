---
const { size } = Astro.props;
---

<div class={size} id="stjerne_container">
  <div id="stjerne_sprite"></div>
</div>

<style>
  #stjerne_container {
    aspect-ratio: 145/140;
  }

  #stjerne_sprite {
    background-image: url(/img/stjerne.svg);
    background-size: cover;
    width: 100%;
    height: 100%;
  }

  .index {
    aspect-ratio: 145/140;
    width: 10rem;
  }
  .about {
    aspect-ratio: 145/140;
    width: 18rem;
  }

  @media (max-width: 600px) {
    .about,
    .index {
      display: none;
    }
  }
</style>
