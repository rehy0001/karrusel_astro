---
import Pinkbutton from "../components/Pinkbutton.astro";
---

<body>
  <div class="nav-bar">
    <div class="logo">
      <a href="/"><img id="logo" src="../public/logo.svg" alt="logo" /></a>
    </div>
    <div>
      <div class="date">22./8. - 24./8. 2024</div>
    </div>
    <div class="button_og_burger">
      <div class="menu_knap">
        <Pinkbutton button_text="Tickets" class="ticket-button" />
      </div>
      <div class="burger-menu-toggle"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="none" stroke="#f5f5f5" stroke-linecap="round" stroke-linejoin="round" d="M3 6.001h18m-18 6h18m-18 6h18"></path></svg></div>
    </div>
  </div>

  <div class="burger-menu">
    <div class="burger-menu-close"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 21 21"><path fill="none" stroke="#f5f5f5" stroke-linecap="round" stroke-linejoin="round" d="m15.5 15.5l-10-10zm0-10l-10 10"></path></svg></div>
    <ul class="menu-links">
      <li><a href="/lineup">Line Up</a></li>
      <li><a href="/ticket">Tickets</a></li>
      <li><a href="/about">About Us</a></li>
    </ul>
  </div>

  <style>
    body {
      margin: 0;
      font-family: "Roboto";
    }

    .nav-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 20px;
      color: #fff;
    }

    .logo {
      display: flex;
      align-items: center;
      width: 185.2px;
    }

    .logo img {
      top: 21px;
      position: relative;
      width: 110px;
      height: auto;
      margin-right: 10px;
      z-index: 9802;
      margin-left: 20px;
    }

    .date {
      font-size: 24px;
      font-family: "Lexend";
      font-weight: 400;
      top: 44px;
      align-items: center;
      margin-top: 16px;
    }

    .button_og_burger {
      display: flex;
      justify-content: space-between;
      gap: 20px;
      margin-top: 34px;
    }

    .ticket-button {
      margin: 0 20px;
    }

    .menu_knap {
      margin-top: 15px;
      margin-right: 20px;
    }

    .burger-menu {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 9800;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background-image: url(../public/menu_baggrund.svg);
    }

    .burger-menu-toggle {
      font-family: "Roboto";
      font-size: 3rem;
      font-weight: 200;
    }

    .burger-menu-toggle:hover {
      cursor: pointer;
    }

    .burger-menu.active {
      display: flex;
    }

    .burger-menu-close {
      position: absolute;
      top: 10px;
      right: 20px;
      font-size: 3rem;
      color: #fff;
      cursor: pointer;
      margin-top: 20px;
      margin-right: 10px;
    }

    .menu-links {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: linear-gradient(228deg, rgb(253, 253, 253), #eb1b7d);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .menu-links li {
      margin-bottom: 30px;
    }

    .menu-links a {
      color: #fff;
      font-family: "Goldman";
      font-weight: 900;
      font-size: 97px;
      text-decoration: none;
      text-transform: uppercase;
    }
  </style>

  <script>
    const burgerMenuToggle = document.querySelector(".burger-menu-toggle");
    const burgerMenu = document.querySelector(".burger-menu");
    const burgerMenuClose = document.querySelector(".burger-menu-close");

    burgerMenuToggle.addEventListener("click", () => {
      burgerMenu.classList.toggle("active");
    });

    burgerMenuClose.addEventListener("click", () => {
      burgerMenu.classList.remove("active");
    });
  </script>
</body>
