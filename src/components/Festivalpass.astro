---
const { data } = Astro.props;

console.log(data);
---

<article class={data.id == 1 ? "fullfestival" : data.id == 2 ? "thursday" : data.id == 3 ? "friday" : data.id == 4 ? "saturday" : ""}>
  <h3>Karrusel Festival 2024</h3>

  <h2>{data.ticket_name}</h2>

  <p>{data.description}</p>

  <h4>{data.price}DKK</h4>
  <p id="fee">+ Ticket Fee</p>

  <div class="buy_btn">
    <a href={data.buy_now_link}>Buy Now +</a>
  </div>
</article>

<style>
  .fullfestival {
    border: 3px solid #5181e9;

    box-shadow:
      0 0 10px #1620a8,
      0 0 20px #001eff,
      inset 0 0 5px #161ccd;
  }
  .thursday {
    border: 3px solid #ff87ed;

    box-shadow:
      0 0 10px #df6d0f,
      0 0 20px #ff00ee,
      inset 0 0 5px #d13ebb;
  }

  .friday {
    border: 3px solid #e18e46;

    box-shadow:
      0 0 10px #f88101,
      0 0 20px #ffaa65,
      inset 0 0 5px #fc953b;
  }

  .saturday {
    border: 3px solid #c74eef;

    box-shadow:
      0 0 10px #5a0cc8,
      0 0 20px #c800ff,
      inset 0 0 5px #cb43f9;
  }

  article {
    border: 1px solid white;
    background-color: rgba(25, 25, 25, 0.896);
    width: 91%;
    text-align: center;
    padding: 2% 1%;
    margin: 2% auto;
  }

  h3 {
    font-family: "Lexend";
    font-size: 1.1rem;
    color: white;
    margin-top: 50px;
    margin-bottom: 30px;
  }

  h2 {
    font-family: "Goldman";
    font-weight: bold;
    font-size: 2rem;
    background: linear-gradient(228deg, rgb(253, 253, 253), #eb1b7d);
    -webkit-background-clip: text;
